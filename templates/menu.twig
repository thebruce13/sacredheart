{% if menu %}
	<ul class="navbar">
	{% for item in menu %}
		<li class="{{ item.classes | join(' ') }} {{ item.children ? 'dropdown' : '' }}">
			<a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }} {{ item.children ? '<span class="dropbtn"><span>' : '' }}</a>
			{% include "menu-children.twig" with {'menu': item.children} %}
		</li>
	{% endfor %}
		<li class="hide-large-up menu-item dropdown"><a href="#">My Student's Progress</a></li>
		<li class="hide-large-up menu-item dropdown"><a href="#">Smart Tuition</a></li>
	</ul>
{% endif %}
