{% extends "base.twig" %}

{% block content %}
<div class="content-wrapper post-type-{{post.post_type}}" id="post-{{post.ID}}">
	<section class="article-content">
	<div class="hero clearfix" style="background-image:url('{{TimberImage(post.hero_image).src}}')" />
		<div class="row">
		<h1 class="article-h1">{{post.title}}</h1>
		<div class="article-body">
			{{post.content}}
		</div>
	</div>
	</div>
		<!-- star, book, bell, cross -->
		<div class="grid row ">
			<div class="column">
				<a href="{{post.card_1_link}}" class="card card-icons">
					<svg class="card__icon icon-{{post.card_1_icon|lower}}">
						<use xlink:href="#{{post.card_1_icon|lower}}" style="overflow:visible;"></use>
					</svg>
					<h2 class="card__heading">{{post.card_1_title}}</h2>
					<p class="card__content">{{post.card_1_text}}</p>
					<div class="card__button">{{post.card_1_button_text}}</div>
				</a>
			</div>
			<div class="column">
				<a href="{{post.card_2_link}}" class="card card-icons">
					<svg class="card__icon icon-{{post.card_2_icon|lower}}">
						<use xlink:href="#{{post.card_2_icon|lower}}" style="overflow:visible;"></use>
					</svg>
					<h2 class="card__heading">{{post.card_2_title}}</h2>
					<p class="card__content">{{post.card_2_text}}</p>
					<div class="card__button">{{post.card_2_button_text}}</div>
				</a>
			</div>
			<div class="column">
				<a href="{{post.card_3_link}}" class="card card-icons">
					<svg class="card__icon icon-{{post.card_3_icon|lower}}">
						<use xlink:href="#{{post.card_3_icon|lower}}" style="overflow:visible;"></use>
					</svg>
					<h2 class="card__heading">{{post.card_3_title[0]}}</h2>
					<p class="card__content">{{post.card_3_text}}</p>
					<div class="card__button">{{post.card_3_button_text}}</div>
				</a>
			</div>
		</div>
</div><!-- /content-wrapper -->
 <div class="wrapper news row">
            <div class="grid news-header">
                <div class="column">
                    <h2>News</h2>
                </div>
                <div class="column text-right prenav-menu">
                    <a href="#" class="button button-red">SHS Spotlight</a>
                </div>
            </div>
            {% for post in news %}
            <div class="news-story clearfix">
                {% if post.thumbnail.width > 250 %}
                <img class="news-image" src="{{ TimberImage(post.thumbnail.src)|resize(250) }}"
                    alt="{{post.thumbnail.alt}}" />
                {% else %}
                <img class="news-image" src="{{ post.thumbnail.src }}" alt="{{post.thumbnail.alt}}" />
                {% endif %}
                <div>
                   <h3> <a href="{{post.link}}">{{post.title}}</a></h3>
				   <strong>{{post.date}}</strong>
                </div>

                {{post.preview}}
            </div><br><br>
            {% endfor %}
        </div>
{% endblock %}